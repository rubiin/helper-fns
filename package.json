{
  "name": "helper-fns",
  "version": "2.3.5",
  "description": "Some common utilities functions for everyday backend usage with zero dependencies",
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,md}\"",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "jest"
  },
  "keywords": [
    "utils",
    "functions",
    "utilities",
    "backend"
  ],
  "author": "Rubin Bhandari <roobin.bhandari@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubiin/js-utils"
  },
  "bugs": {
    "url": "https://github.com/rubiin/js-utils/issues"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

{
  "name": "@rubiin/js-utils",
  "version": "2.1.5",
  "description": "Some common utils functions for everyday backend usage",
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,md}\"",
    "build": "rimraf dist && tsc -p tsconfig.build.json"
  },
  "keywords": [
    "utils",
    "functions"
  ],
  "author": "Rubin Bhandari <roobin.bhandari@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubiin/js-utils"
  },
  "bugs": {
    "url": "https://github.com/rubiin/js-utils/issues"
  },
  "dependencies": {
    "date-fns": "^2.28.0"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@types/node": "^17.0.16",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
